<RoutineMain>:
    orientation: 'vertical'
    BoxLayout:
        canvas:
            Color:
                rgb: (0, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: (1, None)
        height: 50
        pos_hint: {'top': 1}
        BoxLayout:
            size_hint: (.25, 1)
        BoxLayout:
            canvas:
                Color:
                    rgb: (0, 0, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: (.5, 1)
            pos_hint: {'center_x': .5}
            Button:
                text: "New"
                #size_hint_x: None
                #width: '50dp'
            Button:
                text: ""
                #size_hint_x: None
                #width: '50dp'
            Button:
                text: "All"
                #size_hint_x: None
                #width: '50dp'
        BoxLayout:
            size_hint: (.25, 1)
    #--time-card container
    BoxLayout:
        #size_hint: (1, .8)
        canvas:
            Color:
                rgb: (1, 0, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        padding: 20
        spacing: 20
        BoxLayout:
            canvas:
                Color:
                    rgb: (1, 1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: (.9, .3)
            #size: (300, 200)
            pos_hint: {'center_x': .5, 'top': 1}
            #width: '100dp'
            #height: '80dp'
            padding_top: 10
        BoxLayout:
            canvas:
                Color:
                    rgb: (1, 1, 0)
                Rectangle:
                    size: self.size
