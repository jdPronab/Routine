<RoutineMain>:
    orientation: 'vertical'
    BoxLayout:
        canvas:
            Color:
                rgb: (0, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: (1, None)
        height: 50
        pos_hint: {'top': 1}
        BoxLayout:
            size_hint: (.25, 1)
        BoxLayout:
            canvas:
                Color:
                    rgb: (0, 0, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: (.5, 1)
            pos_hint: {'center_x': .5}
            Button:
                text: "New"
                on_press: root.add_new_alarm()
                #size_hint_x: None
                #width: '50dp'
            Button:
                text: ""
                #size_hint_x: None
                #width: '50dp'
            Button:
                text: "All"
                #size_hint_x: None
                #width: '50dp'
        BoxLayout:
            size_hint: (.25, 1)
    #--time-card container
    #BoxLayout:
    StackLayout:
        #size_hint: (1, .8)
        canvas:
            Color:
                rgb: (1, 0, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'tb-lr'
        padding: 20
        spacing: 20
        BoxLayout:
            canvas:
                Color:
                    rgb: (93/225, 99/225, 94/225)
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: (1, .3)
            pos_hint: {'center_x': .5}
            orientation: 'vertical'
            Label:
                markup: True
                text: "[b][size=30]{}[/size][/b]".format(root.current_alarm_name)
            Label:
                markup: True
                text: "[size=20]{}[/size][sup][size=20]ss[/size][/sup]".format(root.current_alarm_time)
            Label:
                markup: True
                text: "{}".format(root.current_alarm_description)
        BoxLayout:
            canvas:
                Color:
                    rgb: (93/225, 99/225, 94/225)
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: (1, .3)
            pos_hint: {'center_x': .5}
            orientation: 'vertical'
            Label:
                markup: True
                text: "[b][size=30]Name of[/size][/b]"
            Label:
                markup: True
                text: "Time -[size=20]HH-MM-[/size][sup][size=20]ss[/size][/sup]"
            Label:
                markup: True
                text: "Description of the task"
